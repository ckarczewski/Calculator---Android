<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    style="@style/Widget.AppCompat.Button.Borderless"-->

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="888dp"
        android:layout_height="241dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/back"
                style="@style/button_other"
                android:text="â«·"
                android:textSize="18sp"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/button17"
                style="@style/button_other"
                android:layout_weight="1"
                android:onClick="clearBtn"
                android:text="@string/clear"
                android:textSize="18sp"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/grey"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/button18"
                style="@style/button_num"
                android:onClick="okBtn"
                android:text="@string/ok"
                android:textSize="18sp"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/grey"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/button19"
                style="@style/button_other"
                android:text="@string/plus_minus"
                android:textSize="18sp"
                android:backgroundTint="@color/purple_500"
                tools:ignore="UsingOnClickInXml" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button13"
                style="@style/button_num"
                android:text="@string/seven"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button14"
                style="@style/button_num"
                android:text="@string/eight"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button15"
                style="@style/button_num"
                android:text="@string/nine"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button16"
                style="@style/button_operation"
                android:text="@string/multiply"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button9"
                style="@style/button_num"
                android:text="@string/four"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button10"
                style="@style/button_num"
                android:text="@string/five"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button11"
                style="@style/button_num"
                android:text="@string/six"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button12"
                style="@style/button_operation"
                android:text="@string/divide"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button5"
                style="@style/button_num"
                android:text="@string/one"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button6"
                style="@style/button_num"
                android:text="@string/two"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button7"
                style="@style/button_num"
                android:text="@string/three"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button8"
                style="@style/button_operation"
                android:text="@string/subtract"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button"
                style="@style/button_num"
                android:text="@string/zero"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button2"
                style="@style/button_num"
                android:text="@string/point"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button3"
                style="@style/button_operation"
                android:onClick="equalBtn"
                android:text="@string/equals"
                android:textSize="18sp"
                android:backgroundTint="@color/grey_2"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/button4"
                style="@style/button_operation"
                android:text="@string/add"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="657dp"
        android:layout_height="102dp"
        android:text="@string/display"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13"
        android:freezesText="true"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="166dp"
        android:layout_height="72dp"
        android:text=""
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.403"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714"
        />

</androidx.constraintlayout.widget.ConstraintLayout>